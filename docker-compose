version: "3.8"

services:
  pihole:
    container_name: pihole
    image: pihole/pihole:latest
    hostname: ${PIHOLE_HOSTNAME:-pihole}
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "80:80"
    environment:
      TZ: "America/New_York"
    volumes:
      - /opt/pihole-data:/etc/pihole
      - /opt/pihole-dnsmasq:/etc/dnsmasq.d
    restart: unless-stopped
    networks:
      - pihole_net

  unbound:
    container_name: unbound
    image: mvance/unbound:latest
    restart: unless-stopped
    networks:
      - pihole_net

networks:
  pihole_net:
    driver: bridge
